{
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "strict": ["error", "global"],
    "curly": "warn",
    "react/prop-types": "off",
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "eol-last": "error",
    "object-curly-spacing": ["error", "always"],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "ObjectExpression": "off"
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "semi": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
